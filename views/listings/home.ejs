<% layout('layouts/boilerplate') %>

<h4 style="
    margin-top: 10px;
    font-size: 40px; 
    font-weight: bold; 
    color: #555; 
    padding-left: 15px;
">
  Discover your next adventure, with 
  <span style="color: #111;">Wondermon</span>...
</h4>



<div class="listings-container mt-4">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 justify-content-center">

    <% for(let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="listing_link">
          <div class="lis-card h-100">
            <img src="<%= listing.image.url %>" class="lis-card-img-top" alt="listing_image" style="height: 20rem; object-fit: cover; border-radius: 0.5rem;">
            <div class="lis-card-body">
              <h5 class="lis-card-title"><%= listing.title %></h5>
              <p class="lis-card-text">$<%= listing.price %></p>
            </div>
          </div>
        </a>
      </div>
    <% } %>

  </div>
</div>
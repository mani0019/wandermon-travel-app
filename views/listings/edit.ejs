<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>

    <form action="/listings/<%= listing._id %>?_method=PUT" method="post" class="needs-validation" novalidate enctype="multipart/form-data" >
      
      <!-- Title -->
      <div>
        <label for="title" class="form-label">Title</label>
        <input type="text" id="title" name="listing[title]" placeholder="Enter title" value="<%= listing.title %>" required class="form-control" />
        <div class="invalid-feedback">Please enter a valid title.</div>
      </div>
      <br />

      <!-- Description -->
      <div>
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="listing[description]" placeholder="Enter description" required class="form-control"><%= listing.description %></textarea>
        <div class="invalid-feedback">Please enter a valid description.</div>
      </div>
      <br />

      <div class="mb-3">
        original image:<br/>
        <img src="<%= oriimg %>" alt="Listing Image" />

      </div>

      <!-- Image URL -->
      <div>
        <label for="image" class="form-label">Image URL</label>
        <input type="file" id="image" name="listing[image]" placeholder="Enter image URL"  required class="form-control" />
        <div class="invalid-feedback">Please enter a valid image file.</div>
      </div>
      <br />

      <!-- Price & Country -->
      <div class="pc-edit d-flex gap-3">
        <div>
          <label for="price" class="form-label">Price</label>
          <input type="number" id="price" name="listing[price]" placeholder="Enter price" value="<%= listing.price %>" required class="form-control" />
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <div>
          <label for="country" class="form-label">Country</label>
          <input type="text" id="country" name="listing[country]" placeholder="Enter country" value="<%= listing.country %>" required class="form-control" />
          <div class="invalid-feedback">Please enter a valid country.</div>
        </div>
      </div>
      <br />

      <!-- Location -->
      <div>
        <label for="location" class="form-label">Location</label>
        <input type="text" id="location" name="listing[location]" placeholder="Enter location" value="<%= listing.location %>" required class="form-control" />
        <div class="invalid-feedback">Please enter a valid location.</div>
      </div>
      <br />

      <button type="submit" class="btn btn-primary">Save</button>
    </form>
  </div>
</div>

<script src="/js/validate.js"></script>

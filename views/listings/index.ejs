<% layout('layouts/boilerplate') %>


<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    align-items: center;
    
  }
  .filter{
    text-align: center;
    margin-top: 2rem;
    margin-right: 2rem;
    opacity: 0.7;
    cursor: pointer;

  }
  .filter:hover{
    opacity: 1;
    transform: scale(1.1);
    transition: all 0.1s ease-in-out;
  }
  .tax-info{
    display: none;
  }
  .tax-switch{
    border:1px solid #ccc;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem;
    margin-left: 5rem;
    display: flex;
    align-items: center;
    
  }
  
</style>
<div id="filters">
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <span>Trending</span>
  </div>
    <div class="filter">
    <div><i class="fa-solid fa-bed"></i></i></div>
    <span>Rooms</span>
  </div>
  <div id="filters">
  <div class="filter">
    <div><i class="fa-solid fa-city"></i></i></div>
    <span>Iconic cities</span>
  </div>
    <div class="filter">
    <div><i class="fa-solid fa-hotel"></i></i></div>
    <span>Hotels</span>
  </div>
  <div id="filters">
  <div class="filter">
    <div><i class="fa-solid fa-people-group"></i></div>
    <span>Popular spots</span>
  </div>
    
  </div>
    <div class="filter">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <span>Beach</span>
  </div>
  </div>
    <div class="filter">
    <div><i class="fa-solid fa-utensils"></i></div>
    <span>Restaurants</span>
  </div>
  
    <div class="filter">
    <div><i class="fa-solid fa-map-location-dot"></i></div>
    <span>View map</span>
  </div>
  <div class="tax-switch">
  <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display Taxes after taxes</label>

   </div>
   </div>
</div>


<div class="listings-container mt-4">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 justify-content-center">

    <% for(let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="listing_link">
          <div class="lis-card h-100">
            <img src="<%= listing.image.url %>" class="lis-card-img-top" alt="listing_image" style="height: 20rem; object-fit: cover; border-radius: 0.5rem;">
            <div class="lis-card-body">
              <h5 class="lis-card-title"><%= listing.title %></h5>
              <p class="lis-card-text">&#8377;<%= listing.price.toLocaleString('en-US') %>/night
                <i class="tax-info"> &nbsp;&nbsp;+18% GST</i></p>
            </div>
          </div>
        </a>
      </div>
    <% } %>

  </div>
</div>
<script>
  const taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("change", () => {
    const taxInfoElements = document.querySelectorAll(".tax-info");
    taxInfoElements.forEach(el => {
      el.style.display = taxSwitch.checked ? "inline" : "none";
    });
  });
</script>
